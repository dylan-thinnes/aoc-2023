#!/usr/bin/env -S sed -Ef
# Initialize sum in hold space
1{x;s/.*/0/;x;}

s/one/on1ne/g
s/two/tw2wo/g
s/three/thre3hree/g
s/four/fou4our/g
s/five/fiv5ive/g
s/six/si6ix/g
s/seven/seve7even/g
s/eight/eigh8ight/g
s/nine/nin9ine/g

# Read in a value
s/^[^0-9]*//
s/[^0-9]*$//
s/^(.).*(.)$/\1\2/
s/^(.)$/\1\1/

G;s/\n/:/

:loop1
s/(.):([0-9]*)([0-9])/:\2#\1\3/
s/(.):#/:#\1#/
s/^:([0-9]*)([0-9])#/:\1#\2#/
t loop1

s/://

s/0//g
s/1/@/g
s/2/@@/g
s/3/@@@/g
s/4/@@@@/g
s/5/@@@@@/g
s/6/@@@@@@/g
s/7/@@@@@@@/g
s/8/@@@@@@@@/g
s/9/@@@@@@@@@/g

:loop2
s/(^|#)@@@@@@@@@@/@#/g
t loop2

s/@@@@@@@@@/9/g
s/@@@@@@@@/8/g
s/@@@@@@@/7/g
s/@@@@@@/6/g
s/@@@@@/5/g
s/@@@@/4/g
s/@@@/3/g
s/@@/2/g
s/@/1/g
s/^#//g
s/#$/#0/g
:loop3
s/##/#0#/g
t loop3
s/#//g

h
